<script>
$(document).ready(function() {
	
	var $link = $('a[href^="http"]');
	
	$link.on('mouseenter', function() {
		var url = $(this).attr('href');
		$(this).append('<iframe src="' + url + '"></iframe>' );
	});
	
	$link.on('mouseleave', function() {
		$(this).find('iframe').remove();
	});
	
});
</script>
